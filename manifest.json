{
    "manifest_version": 2,
    "name": "Bulk Delete ChatGPT Conversations",
    "version": "1.0",
    "description": "A Chrome extension to bulk delete ChatGPT conversations.",
    "icons": {
      "48": "icon48.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],    
    "browser_action": {
      "default_icon": "icon48.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  